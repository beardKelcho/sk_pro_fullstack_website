// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Kullanıcı modeli
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String
  password String
  role     String  @default("USER")
  active   Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  projects    Project[]   // Kullanıcının dahil olduğu projeler
  equipment   Equipment[] // Kullanıcının sorumlu olduğu ekipmanlar
  assignedTasks Task[]     // Kullanıcıya atanan görevler

  @@index([email])
}

// Müşteri modeli
model Client {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String?
  phone    String?
  address  String?
  notes    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  projects Project[] // Müşteriye ait projeler
}

// Proje modeli
model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  status      String    @default("ACTIVE") // ACTIVE, COMPLETED, CANCELLED
  location    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  client      Client    @relation(fields: [clientId], references: [id])
  clientId    String    @db.ObjectId
  users       User[]    // Projede çalışan kullanıcılar
  equipment   Equipment[] // Projede kullanılan ekipmanlar
  tasks       Task[]    // Projeye ait görevler
}

// Ekipman modeli
model Equipment {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String     // VideoSwitcher, MediaServer, Monitor, Cable, AudioEquipment vs.
  model        String?
  serialNumber String?
  purchaseDate DateTime?
  status       String     @default("AVAILABLE") // AVAILABLE, IN_USE, MAINTENANCE, DAMAGED
  location     String?    // Depo, Sahada vb.
  notes        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  responsibleUser User?    @relation(fields: [responsibleUserId], references: [id])
  responsibleUserId String? @db.ObjectId
  projects       Project[] // Ekipmanın kullanıldığı projeler
  maintenances   Maintenance[] // Ekipmanın bakım geçmişi
}

// Bakım kaydı modeli
model Maintenance {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  type         String     // ROUTINE, REPAIR, CALIBRATION vs.
  description  String
  startDate    DateTime
  endDate      DateTime?
  cost         Float?
  notes        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId String    @db.ObjectId
}

// Görev modeli
model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  priority    String    @default("MEDIUM") // LOW, MEDIUM, HIGH
  status      String    @default("TODO")  // TODO, IN_PROGRESS, DONE
  dueDate     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // İlişkiler
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String   @db.ObjectId
  assignedTo  User     @relation(fields: [assignedToId], references: [id])
  assignedToId String  @db.ObjectId
}

// A/B Test deneyleri için model
model Experiment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  status      String    @default("ACTIVE") // ACTIVE, PAUSED, COMPLETED
  startDate   DateTime  @default(now())
  endDate     DateTime?

  // İlişkiler
  variants    Variant[]
  results     ExperimentResult[]
}

// A/B Test varyasyonları için model
model Variant {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  controlGroup Boolean   @default(false)
  weight       Float     @default(1.0)
  config       Json?

  // İlişkiler
  experiment   Experiment @relation(fields: [experimentId], references: [id])
  experimentId String     @db.ObjectId
  results      ExperimentResult[]
}

// A/B Test sonuçları için model
model ExperimentResult {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  conversion   Boolean   @default(false)
  metadata     Json?
  timestamp    DateTime  @default(now())

  // İlişkiler
  experiment   Experiment @relation(fields: [experimentId], references: [id])
  experimentId String     @db.ObjectId
  variant      Variant    @relation(fields: [variantId], references: [id])
  variantId    String     @db.ObjectId
} 